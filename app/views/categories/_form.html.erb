
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-secondary-outline rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category", class: "mb-2 col-2 col-form-label text-secondary" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn text-secondary btn-outline-light btn-lg" %>
        </div>
      <% end %>