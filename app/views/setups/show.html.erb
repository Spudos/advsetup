        </div>
        <div class="col-sm-4">
        <%= f.label :"Rear diff oil", class: "form-label-sm " %>
        <%= f.text_field :rediff, class: "form-control-sm shadow rounded", placeholder: "Rear diff oil" %>
        </div>
    </div>
<div class="row bg-light">
    <%= link_to 'Edit', edit_setup_path(@setup), class: "col-4 btn btn-outline-secondary btn-sm" %>
    <%= link_to 'Delete', setup_path(@setup), class: "col-4 btn btn-outline-secondary btn-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    <%= link_to 'Return to setup listing', setups_path, class: "col-4 btn btn-outline-secondary btn-sm" %>
</div>      
</div>  

<% end %>